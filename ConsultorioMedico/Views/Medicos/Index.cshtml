@{
    @model ConsultorioMedico.Models.MedicosViewModel
}
<h2 style="margin-bottom: 40px;">Medicos disponibles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Matricula</th>
            <th>Especialidad</th>
            <th>Editar</th>
            <th>Borrar</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var medico in Model.Medicos)
        {
            <tr>
                <td>@medico.Nombre</td>
                <td>@medico.Matricula</td>
                <td>@medico.Especialidad</td>
                <td><a href="medicos/editar/@medico.Id">Editar</a></td>
                <td><a style="color:red;" href="medicos/borrar/@medico.Id">Borrar</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" role="button" href="medicos/crear">Crear Medico</a>
